
load( "data://1LVZ.pdb", {
    onLoad: function( o ){

        o.addRepresentation( "cartoon" );
        o.centerView();
    },
    firstModelOnly: true
} );


load( "data://1u19.pdb", function( o ){

    o.addRepresentation( "cartoon" );
    o.centerView();

    o.setName( "1U19" );

} );


load( "data://3dqb.pdb", function( o ){

    o.addRepresentation( "cartoon" );
    o.centerView();

    o.setName( "3DQB" );

} );


then( function(){

    structures( "1U19" ).list[ 0 ].superpose( structures( "3DQB" ).list[ 0 ], true );
    structures( "3DQB" ).centerView();

} );


